page{
  font-size: 14px;
}
audio{
  display: none !important;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.song-list{
  padding-top: 180rpx;
  padding-bottom: 100rpx;
  width: 100%;
  color: #666;
}
.song{
  display: flex;
  flex-wrap: wrap;
  justify-content:space-around;
  width: 100%;
  height: 100%;
}
.song-item{
  width: 47%;
  height: 500rpx;
}
.song-no{
  width: 100%;
  height: 80%;
}
.even{
  background: #f3f3f3;
}
.current{
  position: relative;
  width: 100%;
  height: 100%;
}
.song-name{
  overflow: hidden;
  display: flex;
  justify-content: center;
  color: #31c27c;
}
.footer-song{
  color: white;
  margin-left: 15rpx;
}
.navvalue{
  position: fixed;
  top: 180rpx;
  left: 0;
  right: 0;
  padding: 0 15rpx;
  height: auto;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  background: rgba(141, 135, 135, 0.568); 

}
.neirong{
  width: 50px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #31c27c;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.controls{
  padding: 5px 30rpx 5px 0;
}
.controls .btn{
  display: inline-block;
  width: 40px;
  height: 40px;
  margin: 0 5px;
  text-align: center;
  text-indent: -999px;
  background-size: 100% 100%;
}
.controls .btn-mode{
  position: absolute;
  width: 24px;
  height: 24px;
  right: 15px;
  bottom: 13px;
}
.cu-bar {
	display: flex;
	position: relative;
	align-items: center;
	min-height: 100rpx;
	justify-content: space-between;
}.bg-white {
	background-color: #ffffff;
	color: #666666;
}
.cu-bar.fixed,
.nav.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
	box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
.cu-bar .search-form {
	background-color: #f5f5f5;
	line-height: 64rpx;
	height: 64rpx;
	font-size: 24rpx;
	color: #333333;
	flex: 1;
	display: flex;
	align-items: center;
	margin: 0 30rpx;
}
.round {
	border-radius: 5000rpx;
}
.cuIcon-search {
  margin: 0 0.5em 0 0.8em;
	font-family: "cuIcon";
	font-size: inherit;
	font-style: normal;
}
.cu-bar .search-form input {
	flex: 1;
	padding-right: 30rpx;
	height: 64rpx;
	line-height: 64rpx;
	font-size: 26rpx;
	background-color: transparent;
}
.bg-gradual-green {
	background-image: linear-gradient(45deg, #39b54a, #8dc63f);
	color: #ffffff;
}
.cu-btn {
	position: relative;
	border: 0rpx;
	display: inline-flex;
	align-items: center;
	justify-content: center;
	box-sizing: border-box;
	padding: 0 30rpx;
	font-size: 28rpx;
	height: 64rpx;
	line-height: 1;
	text-align: center;
	text-decoration: none;
	overflow: visible;
	margin-left: initial;
	transform: translate(0rpx, 0rpx);
	margin-right: initial;
}
.cu-bar .search-form+.action {
	margin-right: 30rpx;
}
.cu-bar .action {
	display: flex;
  box-sizing: border-box;
	align-items: center;
	height: 100%;
	justify-content: center;
	max-width: 100%;
}
.shadow-blur {
	position: relative;
}

.shadow-blur::before {
	display: block;
	background: inherit;
	filter: blur(10rpx);
	position: absolute;
	width: 100%;
	height: 100%;
	top: 10rpx;
	left: 10rpx;
	z-index: -1;
	opacity: 0.4;
	transform-origin: 0 0;
	border-radius: inherit;
	transform: scale(1, 1);
}
button::after {
border: 0px solid rgba(0, 0, 0, 0.2);
}
.cu-btn.button-hover {
	transform: translate(1rpx, 1rpx);
}
.navbar{ 
  position: fixed;
  top: 100rpx;
  left: 0;
  right: 0;
  display: flex; 
  background: #fff; 
} 
.navbar .item{ 
  position: relative; 
  flex: auto; 
  text-align: center; 
  line-height: 80rpx; 
  font-size:14px;
} 
/* 顶部导航字体颜色 */
.navbar .item.active{ 
  color: #f0145a; 
} 
/* 顶部指示条属性 */
.navbar .item.active:after{ 
  content: ""; 
  display: block; 
  position: absolute; 
  bottom: 0; 
  left: 0; 
  right: 0; 
  height: 6rpx; 
  background: #f0145a; 
}